<Window x:Class="MSG_by_AL__XAML_.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSG_by_AL__XAML_"
        mc:Ignorable="d"
        Title="MSG by AL" Height="402" Width="372.8" WindowStyle="ThreeDBorderWindow" Icon="MSG_BY_AL.ico" ResizeMode="CanMinimize" Background="Black">
    <Grid>
        <TextBox x:Name="name_text" Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap" Margin="67,127,0,0" TextAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="225"/>
        <Grid Margin="67,242,0,0"  Width="225" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border x:Name="border" BorderThickness="3" CornerRadius="11" BorderBrush="{StaticResource BorderBrush}" Background="Transparent">
                
            </Border>
            <PasswordBox x:Name="password_text" Background="Transparent" Foreground="{StaticResource TextColor1}"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14"
                         Cursor="Arrow" BorderThickness="0">
            </PasswordBox>
        </Grid>
        <Label Content="Имя пользователя" Style="{StaticResource LabelStyle}" RenderTransformOrigin="0.5,0.562" Margin="118,92,0,0" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="132" FontSize="14"/>
        <Label Content="Пароль" Style="{StaticResource LabelStyle}" RenderTransformOrigin="0.5,0.562" Margin="148,207,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="65" FontSize="14"/>
        <Label Content="Регистрация" Style="{StaticResource LabelStyle}" RenderTransformOrigin="0.5,0.562" Margin="99,37,0,0" FontSize="26" Height="45" VerticalAlignment="Top" HorizontalAlignment="Left" Width="166"/>
        <Button Content="Зарегистрироваться" Style="{StaticResource ButtonStyle}" VerticalAlignment="Top" Margin="67,284,0,0" Height="23" HorizontalAlignment="Left" Width="225" Click="SignUp_Click"/>
        <Label Content="Логин" Style="{StaticResource LabelStyle}" RenderTransformOrigin="0.5,0.562" Margin="155,152,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" FontSize="14"/>
        <TextBox x:Name="login_text" Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap" Margin="67,182,0,0" TextAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="225"/>
    </Grid>
</Window>
