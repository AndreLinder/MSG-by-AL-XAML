<Window x:Class="MSG_by_AL__XAML_.ChatsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSG_by_AL__XAML_"
        mc:Ignorable="d"
        Title="MSG by AL" Height="570" Width="890" WindowStyle="ThreeDBorderWindow" Icon="MSG_BY_AL.ico" ResizeMode="CanMinimize" Background="Black">
    <Grid>
        <!--Диалоговое окно со списком чатов-->
        <ListView x:Name="Chat_list" HorizontalAlignment="Left" Height="492" VerticalAlignment="Top" Width="160" 
                  Cursor="Hand" Background="#FF1B1B1B" Foreground="{DynamicResource BorderBrush}" 
                  BorderBrush="{DynamicResource BorderBrush}" BorderThickness="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Список чатов"  Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="{Binding ID}" Width="20" Background="{StaticResource IsMouseOverColor}" 
                                               Foreground="{StaticResource TextColor2}"/>
                                    <TextBlock Text="{Binding Name}" Width="140" Background="{StaticResource IsMouseOverColor}"
                                               Foreground="{StaticResource TextColor2}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <!--Обновление диалогоового окна с чатами-->
        <Button x:Name="Update_Chat_List" Style="{StaticResource ButtonStyle}"  Content="Обновить список чатов" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Width="160" Height="25" Margin="0,505,0,0" Click="Update_Chat_List_Click"/>
        <ListBox x:Name="Message_List" HorizontalAlignment="Left" Height="492" Margin="160,0,0,0" VerticalAlignment="Top" Width="500" 
                 Background="#FF1B1B1B" Foreground="{DynamicResource TextColor1}" BorderBrush="{DynamicResource BorderBrush}"
                 BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <StackPanel Width="490"  VerticalAlignment="Bottom" Orientation="Horizontal">
                <TextBlock x:Name="Message" Text="{Binding MyMessage}" Width="245" Height="25"/>
            </StackPanel>
        </ListBox>
        <Button Style="{StaticResource ButtonStyle}" Content="Отправить" Height="25" HorizontalAlignment="Left" Margin="560,505,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
